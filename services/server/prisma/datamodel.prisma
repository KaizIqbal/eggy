enum Permission {
  ADMIN
  USER
  EGGCREATE
  EGGUPDATE
  EGGDELETE
  PERMISSIONUPDATE
}

enum cursorType {
  WINDOW
  LINUX
}

type User {
  id: ID! @id
  name: String!
  username: String! @unique
  email: String! @unique
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  password: String!
  resetToken: String
  resetTokenExpiry: String
  permissions:[Permission]  @scalarList(strategy: RELATION)
}

type Egg {
  id: ID! @id
  title: String!
  eggname: String! @unique
  isPublished: Boolean! @default(value: false)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  user: User!
  cursorTypes: [cursorType]!  @scalarList(strategy: RELATION)
}

type Flavour {
  id: ID! @id
  title: String!
  flavourname: String!
  egg: Egg!
}

type Cursor {
  id: ID! @id
  name: String!
  frames: Int!
  flavour: Flavour!
}